package org.firstinspires.ftc.robotcontroller;

import com.qualcomm.robotcore.eventloop.opmode.LinearOpMode;
import com.qualcomm.robotcore.eventloop.opmode.TeleOp;
import com.qualcomm.robotcore.hardware.CRServo;
import com.qualcomm.robotcore.hardware.DcMotorSimple;

@TeleOp(name = "CRServo_360_StepRotation")
public class servopositions extends LinearOpMode {
    @Override
    public void runOpMode() throws InterruptedException {
        // Use CRServo for continuous rotation
        CRServo servo = hardwareMap.get(CRServo.class, "servo1");
        servo.setDirection(DcMotorSimple.Direction.REVERSE);
        waitForStart();

        // Tune this value experimentally so it turns ~120 degrees
       while(opModeIsActive()){
           servo.setPower(0.5);
           sleep(250);
           servo.setPower(0.5);
           sleep(250);
           servo.setPower(0);
           sleep(1000);
           servo.setPower((0.5));
           sleep(250);
           servo.setPower(0);
           sleep(250);
           servo.setPower(0.5);
           sleep(110);
           servo.setPower(0);
           sleep(1000);

    }}
}
